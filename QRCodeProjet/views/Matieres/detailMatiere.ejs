<!doctype html>
<html>
<head>
    <title>Détail Matière</title>
    <% include ../layout %>
</head>
 
<body>
<div class="wrapper">
    <% include ../Menu %>
    <div id="content">
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span>Modifier la Matière</h1>

            <form id="form" name="matieremodif">
                <div class="form-group">
                    <label>Nom</label>
                    <input type="text" class="form-control" name="nom" value="<%=(matieres[0].nomM.toUpperCase())%>" maxlength="50" required>
                </div>
                <div class="form-group">
                    <label>Promotion</label>
                    <select name="promo">
                        <% for(var i=0; i<promos.length; i++) {%>
                            <option value="<%=promos[i].idP%>" <% if(promos[i].idP==matieres[0].promotionS) { %> selected="selected" <% } %> ><%=promos[i].nomP%></option>
                        <% } %>
                    </select>
                </div>
				<div class="form-group">
					<label>Heure total :</label>
					<input class="form-control" type="number" value="<%matieres[0].totalHeure%>" name="totalHeure">
				</div>

                <div class="pull-right">
                    <a href="/admin/matieres" class="btn btn-secondary btn-lg">Annuler</a>
                    <a class="btn btn-primary btn-lg" onclick="formMatiereOK('<%= matieres[0].idM %>', '<%= chemin %>')">Appliquer</a>
                    <a id="redirection" href="/<%= chemin %>"></a>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>
</body>
</html>

