<!doctype html>
<html>
    <head>
        <title>Création Matière</title>
        <% include ../layout %>
    </head>
    <body>
    <div class="wrapper">
        <% include ../Menu %>
        <div id="content">
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">

                <h1>Matière</h1>

                <form action="/<%= chemin %>" method="post">
                    <div class="form-group">
                        <label>Nom :</label>
                        <input type="text" class="form-control" name="nom" maxlength="50" required>
                    </div>
                    <div class="form-group">
                        <label>Promotion :</label>
                        <select name="promo">
                            <% for(var i=0; i<promos.length; i++) {%>
                            <option value="<%=promos[i].idP%>"><%=promos[i].nomP%></option>
                            <% } %>
                        </select>
                    </div>
					<div class="form-group">
                        <label>Heure total :</label>
						<input class="form-control" type="number" value="" name="totalHeure">
                    </div>
                    <div class="pull-right">
                        <a href="/<%= chemin %>" class="btn btn-secondary btn-lg">Annuler</a>
                        <button type="submit" class="btn btn-success btn-lg">Créer</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
    </body>
</html>
