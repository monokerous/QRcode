<!doctype html>
<html>
    <head>
        <title>Suivi des absences</title>
        <% include ../layout %>
    </head>
    <body>

    <div class="wrapper">
        <% include ../Menu %>
        <div id="content">
        <div id="titre" class="container">
            <h2 class="pull-left">Fiche absences : </h2>
        </div>

        <div class="container">
            
			<table class="table table-hover" id="tableToggle" style="background-color: white; height: 100px;">
				<thead>
					<tr>
						<th class="info" style="text-align: center">Etudiant</th>
						<th class="info" style="text-align: center">Matière</th>
						<th class="info" style="text-align: center">Date</th>
						<th class="info" style="text-align: center">Heure début/Heure fin</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i=0; i<=absences.length-1; i++) { %>
					<tr>

							<th scope="row"><%= absences[i].Nom +" "+ absences[i].Prenom%></th>
							<td><%= absences[i].LibelleMatiere%></td>
							<td><%= (moment(absences[i].Date).format("DD/MM/YYYY"))%></td>
							<td><%=(moment(absences[i].HeureDebut, "HH:mm:ss").format("HH:mm"))%> - <%=(moment(absences[i].HeureFin, "HH:mm:ss").format("HH:mm"))%></td>
					</tr>
					<%}%>
				</tbody>
			</table>
        </div>
		</div>
    </div>
    </body>
</html>