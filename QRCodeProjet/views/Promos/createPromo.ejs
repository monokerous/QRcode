<!doctype html>
<html>
<head>
    <title>Création Promotion</title>
    <% include ../layout %>
</head>
<body>
    <div class="wrapper">
    <% include ../Menu %>
        <div id="content">
            <div class="container">
                <div class="col-sm-6 col-sm-offset-3">

                    <h1>Promotion</h1>

                    <form action="/<%= chemin %>" method="post">
                        <div class="form-group">
                            <label>Nom de la promotion :</label>
                            <input type="text" class="form-control" name="nom" maxlength="50" required>
                        </div>
                        <div class="pull-right">
                            <a href="/<%= chemin %>" class="btn btn-secondary btn-lg">Annuler</a>
                            <button type="submit" class="btn btn-success btn-lg">Créer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
